<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container mt-5">
    <form action="/editarProducto" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Editar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= product.id %>">
                <input type="hidden" name="fotoAnterior" id="fotoAnterior" value="<%= product.foto %>">
                <input class="form-control mb-3" type="text" value="<%= product.producto %>" name="producto" id="producto" placeholder="Producto" autofocus>
                <input class="form-control mb-3" type="text" value="<%= product.stock %>" name="stock" id="stock" placeholder="Stock">
                <input class="form-control mb-3" type="text" value="<%= product.precio %>" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button class="btn btn-primary mb-3" type="submit">Editar producto</button>
                <button class="btn btn-secondary" type="reset">Limpiar campos</button>
            </div>
        </div>
    </form>
</div>
